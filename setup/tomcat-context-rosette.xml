<?xml version="1.0" encoding="utf-8"?>

<Context reloadable="true" privileged="true">

	<!--  ENABLE PRODUCTION  -->
    <Environment name="spring.profiles.active" value="production" type="java.lang.String" override="false"/>

	<!--  LOGGING  -->
    <Environment name="logging.level.ROOT" value="ERROR" type="java.lang.String" override="false"/>
    <Environment name="logging.level.se.leafcoders.rosette" value="INFO" type="java.lang.String" override="false"/>

	<!--  DATABASE  -->
    <Environment name="spring.data.mongodb.database" value="rosette" type="java.lang.String" override="false"/>

	<!--  MAIL  -->
    <Environment name="spring.mail.host" value="" type="java.lang.String" override="false"/>
    <Environment name="spring.mail.port" value="" type="java.lang.Integer" override="false"/>
    <Environment name="spring.mail.username" value="" type="java.lang.String" override="false"/>
    <Environment name="spring.mail.password" value="" type="java.lang.String" override="false"/>

	<!--  ROSETTE  -->
    <Environment name="rosette.baseUrl" value="http://my-public-url.se" type="java.lang.String" override="false"/>
    <Environment name="rosette.jwtSecretToken" value="" type="java.lang.String" override="false"/>
    <Environment name="rosette.defaultMailFrom" value="no-reply@localhost" type="java.lang.String" override="false"/>
    <Environment name="rosette.uploadsPath" value="./rosetteUploads" type="java.lang.String" override="false"/>


	<!--  OR SPECIFY BY PROPERTIES FILE  -->
	<!--    Start with file 'application-production.yml' from Rosette source code in 'src/min/resources' folder -->
    <!--  <Environment name="spring.config.location" value="file:/some/path/rosette/application-production.yml" type="java.lang.String" override="false"/>  -->

    <!-- Disable session persistence across Tomcat restarts -->
    <Manager pathname="" />
</Context>
